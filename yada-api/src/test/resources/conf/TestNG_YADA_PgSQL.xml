<?xml version="1.0" encoding="UTF-8"?>
<!-- *************************************************************** -->
<!-- This file is for testing backwards compatibility with pre-9.0.0 -->
<!-- configurations using a relational database for the YADA index   -->
<!-- *************************************************************** -->
<suite name="pgsql-suite" parallel="false">
	<parameter name="properties" value="/conf/TestNG_YADA_PgSQL.properties"/>
  <test enabled="true" name="API-PgSQL" preserve-order="true">
  	<groups>
  		<run>
  			<include name="core"/>
        <include name="json"/>
        <include name="standard"/>
        <include name="api"/>
        <include name="options"/>
        <include name="plugins"/>
  		</run>
  	</groups>
    <classes>
      <class name="com.novartis.opensource.yada.test.FinderTest"/>
      <class name="com.novartis.opensource.yada.test.ConnectionFactoryTest"/>
      <class name="com.novartis.opensource.yada.test.ServiceTest"/>
    </classes>
  </test>
  <test enabled="false" name="Perf">
  	<groups>
	  	<run>
	  		<include name="perf"/>
	  	</run>
	  </groups>
	  <classes>
	  	<class name="com.novartis.opensource.yada.test.ConnectionFactoryTest"/>
      <class name="com.novartis.opensource.yada.test.PerfTest"/>
	  </classes>
  </test>
</suite> <!-- Suite -->
